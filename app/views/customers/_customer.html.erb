<div class="customer_container">
  <div class="edit_delete_container">
    <p class="edit_link">
      <%= link_to 'Edit', edit_customer_path(customer) %> -
      <%= link_to 'x', customer, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
  <h3 class="customer_name"><%= customer.full_name %></h3>
  <ul id="content">
    <li><%= image_tag customer.image, class:'customer_image' %></li>
    <li class="phone_number_container">Phone: <%= customer.phone_number %></li>
    <li class="email_container">Email: <%= customer.email_address %></li>
    <li class="notes_container">
      <label class="notes_label">Notes:</label>
      <span class="notes">
        <%= customer.notes %>
      </span>
    </li>
  </ul>
</div>
